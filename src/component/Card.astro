---
const { text, img } = Astro.props;
---

<section>
  <img src={img} alt="events" />
  <div class="btn">
    <p>{text}</p>
    <img src="/img/arrow.png" class="pil" alt="" />
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
  }

  .btn {
    display: flex;
    border: 1px solid black;
    justify-content: center;
    align-items: center;
    padding: 10px;
  }

  img {
    width: 100%;
  }

  .pil img {
    width: 20%;
  }
</style>
